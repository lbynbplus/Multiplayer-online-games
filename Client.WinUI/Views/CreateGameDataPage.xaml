<Page
    x:Class="Client.WinUI.Views.CreateGameDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Client.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="游戏名称:" />
                <TextBox x:Name="GameName" Width="100" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="玩家名称:" />
                <TextBox x:Name="PlayerName" Width="100" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="游戏玩法:" />
                <TextBox x:Name="GamePlay" Width="100" />
            </StackPanel>
            <Button
                x:Name="JoinBtn"
                Width="120"
                Height="40"
                Click="JoinBtn_Click"
                Content="创建并加入游戏"
                CornerRadius="8" />
        </StackPanel>
    </Grid>
</Page>
